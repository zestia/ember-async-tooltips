<p>
  Showing and hiding a tooltipper without mouse enter/leave events
</p>

<div>
  <input
    type="text"
    placeholder="Focus me"
    aria-label="Example text area"
    {{on "focus" this.showTooltip}}
    {{on "blur" this.hideTooltip}}
  />

  {{#if this.shouldShowTooltip}}
    <Tooltip @show={{true}}>
      Hello World
    </Tooltip>
  {{/if}}
</div>